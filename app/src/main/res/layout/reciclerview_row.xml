<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reciclerow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/input_text">

    <ImageView
        android:id="@+id/recicleImg"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reciclelocalizacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.477"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/reciclenome"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="50dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/recicleImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recicle_descricao"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="50dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/recicleImg"
        app:layout_constraintTop_toBottomOf="@+id/reciclenome" />

    <TextView
        android:id="@+id/reciclelocalizacao"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="50dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/recicleImg"
        app:layout_constraintTop_toBottomOf="@+id/recicle_descricao" />

</androidx.constraintlayout.widget.ConstraintLayout>